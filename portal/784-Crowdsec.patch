+sub init {
+    my ($self) = @_;
+    $self->_init or return 0;
+    unless ($self->conf->{crowdsecMachineId}
+        and $self->conf->{crowdsecPassword} )
+    {
+        $self->logger->error(
+            'Crowdsec report enabled without machine_id and password');
+        return 0;
+    }
+    $self->rule(
+        $self->p->buildRule( $self->conf->{crowdsecAgent}, 'crowdsecAgent' ) );
+    return 1;
+}
