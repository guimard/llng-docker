+            copyBtn.innerHTML = '<span class="fa fa-check"></span>';
+            setTimeout(function () {
+              copyBtn.innerHTML = '<span class="fa fa-copy"></span>';
+            }, 2000);
+          });
+        });
+      }
+    });
+  })();
+
+})();
